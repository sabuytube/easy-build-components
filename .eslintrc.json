{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "no-prototype-builtins": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "api": "readonly",
    "router": "readonly"
  }
}
